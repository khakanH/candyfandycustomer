  "schemes": [
    "http"
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Account"
        ],
        "summary": "Customer Login portion",
        "description": "",
        "operationId": "Login",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Customer object needed for login",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CustomerLoginModel"
            }
          }
        ],
        "responses": {
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },

    "/signup": {
      "post": {
        "tags": [
          "Account"
        ],
        "summary": "Customer Signup portion",
        "description": "",
        "operationId": "Signup",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Customer object needed for signup",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CustomerSignupModel"
            }
          }
        ],
        "responses": {
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },


    "/get_products": {
      "get": {
        "tags": [
          "Home"
        ],
        "summary": "All Products list on home screen",
        "description": "",
        "operationId": "AllProducts",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
       "parameters": [
         {
            "in": "header",
            "name": "x-api-key",
            "description": "token used for user authentication",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },


    "/search_products": {
      "post": {
        "tags": [
          "Home"
        ],
        "summary": "Search Product on Home Screen",
        "description": "",
        "operationId": "SearchProduct",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
       "parameters": [
         {
            "in": "header",
            "name": "x-api-key",
            "description": "token used for user authentication",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
                        "type": "object",
                        "properties": {
                          "search_text": {
                                          "type": "string",
                                          "example": "Candy",
                                          "required": true
                                  },
                         
                        }
                      }
          }
        ],
        "responses": {
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },

    "/get_product_details": {
      "post": {
        "tags": [
          "Home"
        ],
        "summary": "Product Details",
        "description": "",
        "operationId": "ProductDetails",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
       "parameters": [
         {
            "in": "header",
            "name": "x-api-key",
            "description": "token used for user authentication",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
                        "type": "object",
                        "properties": {
                          "product_id": {
                                          "type": "int",
                                          "example": 1,
                                          "required": true
                                  },
                         
                        }
                      }
          }
        ],
        "responses": {
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },





  },

























  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
